---
import HeaderNavItem from "./HeaderNavItem.astro";

// const { description = "This is an Astro project", title } = Astro.props;
const items = [
	{ href: "/", text: "Home" },
	{ href: "/about", text: "About" },
	{ href: "/blog", text: "Blog" },
];
---

<!-- Header.Nav -->
<nav class="text-center m-auto py-2 px-4 bg-black/30">
	<ul class="flex justify-center gap-4 m-auto">
		{
			items.map((item) => (
				<HeaderNavItem href={item.href} text={item.text} />
			))
		}
	</ul>
</nav>
